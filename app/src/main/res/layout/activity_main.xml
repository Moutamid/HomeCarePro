        <TextView
            android:id="@+id/calendarDayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="April"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="12sp"
            android:drawableTint="@color/off_white"
            android:drawableRight="@drawable/round_arrow_forward_ios_24"
            android:drawableLeft="@drawable/round_arrow_back_ios_24"
            android:fontFamily="@font/poppins"
            android:textSize="22sp"
            android:textColor="@color/off_white" />

        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="350dp"
            app:compactCalendarTargetHeight="350dp"
            app:compactCalendarTextSize="18sp"
            app:compactCalendarBackgroundColor="@color/dark_bg"
            app:compactCalendarTextColor="@color/off_white"
            app:compactCalendarDisplayOtherMonthDays="true"
            app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/dark_header"
            app:compactCalendarCurrentDayBackgroundColor="@color/dark_header"
            app:compactCalendarMultiEventIndicatorColor="@color/high_prio"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="8sp"
            android:layout_weight="1"
            android:background="@drawable/cardbs"
            android:orientation="vertical"
            android:padding="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="Today's Task"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/viewAll"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:backgroundTint="@color/colorBadge"
                    android:drawableRight="@drawable/round_arrow_forward_24"
                    android:drawableTint="@color/dark_header"
                    android:drawablePadding="7sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/dark_header"
                    android:text="@string/view_all"
                    android:textAllCaps="true"
                    android:textSize="15sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

