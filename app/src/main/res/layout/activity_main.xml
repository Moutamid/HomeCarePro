<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:fillViewport="true"
    android:scrollbarSize="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                android:padding="12sp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/createTask"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:backgroundTint="@color/dark_header"
                android:drawableLeft="@drawable/note"
                android:drawableTint="@color/off_white"
                android:fontFamily="@font/poppins"
                android:text="Create Task"
                android:textAllCaps="true"
                android:textSize="15sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="Completed / Low Priority" />

        <View
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:background="@drawable/daybg"
            android:backgroundTint="@color/low_prio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="inProgress / Medium Priority" />

        <View
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:background="@drawable/daybg"
            android:backgroundTint="@color/medium_prio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="High Priority" />

        <View
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:background="@drawable/daybg"
            android:backgroundTint="@color/high_prio" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="MO" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:gravity="center"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="TU" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:gravity="center"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="WE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:gravity="center"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="TH" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:gravity="center"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="FR" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:gravity="center"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="SA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/daybg"
                android:gravity="center"
                android:padding="11sp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="SU" />


        </LinearLayout>

