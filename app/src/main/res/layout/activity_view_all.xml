<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:orientation="vertical"
    tools:context=".ViewAllActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12sp"
            android:backgroundTint="@color/dark_header"
            android:fontFamily="@font/poppins"
            android:text="Go Back"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="All Task"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_alternates"
            android:padding="12sp" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="12sp"
        android:background="@color/dark_bg"
        app:tabBackground="@color/dark_bg"
        app:tabTextColor="@color/off_white"
        app:tabSelectedTextColor="@color/colorBadge"
        app:tabMode="auto"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="@color/colorBadge"
        app:tabIndicatorFullWidth="false" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>