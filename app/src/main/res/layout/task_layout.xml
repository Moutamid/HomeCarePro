<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12sp"
    android:layout_margin="8sp"
    app:cardBackgroundColor="@color/dark_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12sp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/versionCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/dark_header"
            app:cardElevation="0dp"
            app:cardCornerRadius="12sp"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp">

                <TextView
                    android:id="@+id/priority"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="High"
                    android:textSize="18sp"
                    android:textColor="@color/off_white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/off_white"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/versionCard"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:text="Name : New task"
            android:layout_marginTop="12sp" />

        <TextView
            android:id="@+id/taskDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/off_white"
            android:textStyle="bold"
            android:lines="2"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/versionCard"
            android:fontFamily="@font/poppins"
            android:layout_below="@id/taskName"
            android:text="Description : Something fishiidjshcih"
            android:layout_marginTop="6sp" />

        <TextView
            android:id="@+id/frequncy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/off_white"
            android:layout_below="@id/taskDesc"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:text="Frequency : Monthly"
            android:layout_marginTop="6sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frequncy"
            android:layout_marginStart="12sp"
            android:layout_marginTop="12sp"
            android:textColor="@color/off_white"
            android:gravity="end"
            android:text="12/12/1344" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>